<web-app xmlns="http://java.sun.com/xml/ns/javaee"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
                   version="3.0"
                   metadata-complete="true">
<display-name>Сервлет PILEIKO</display-name>
<!--
Для любого сервлета нужно определить два тега servlet и servlet-mapping.
Важно чтобы внутри каждого из этих тегов были теги servlet-name
и имя сервлета в них было одинаковым!!!
-->
    <!-- E:\Projects\JD2019-03-11\src\by\it\pileiko\project\java\controller\FrontController.java -->
    <welcome-file-list>
        <welcome-file>homepage</welcome-file>
    </welcome-file-list>

<servlet>
    <servlet-name>FrontController</servlet-name>
    <servlet-class>by.it.pileiko.project.java.controller.FrontController</servlet-class>
    <multipart-config/>
</servlet>

<servlet-mapping>
    <servlet-name>FrontController</servlet-name>
    <url-pattern>/do</url-pattern>
    <url-pattern>/homepage</url-pattern>
</servlet-mapping>

    <filter>
        <filter-name>PageEncoder</filter-name>
        <filter-class>by.it.pileiko.project.java.filters.PageEncoder</filter-class>
        <init-param>
            <param-name>encode</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>PageEncoder</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>ImageFilter</filter-name>
        <filter-class>by.it.pileiko.project.java.filters.ImageFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>ImageFilter</filter-name>
        <url-pattern>/images/*</url-pattern>
    </filter-mapping>

</web-app>

